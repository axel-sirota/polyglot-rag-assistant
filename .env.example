# Example environment file for Polyglot RAG Assistant
# Copy this file to .env and fill in your actual values

# Docker Hub
DOCKER_USERNAME=your-docker-hub-username

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Deepgram (for STT)
DEEPGRAM_API_KEY=...

# Cartesia (for TTS)
CARTESIA_API_KEY=...

# LiveKit
LIVEKIT_URL=wss://your-app.livekit.cloud
LIVEKIT_API_KEY=...
LIVEKIT_API_SECRET=...

# Amadeus (for flight search)
AMADEUS_CLIENT_ID=...
AMADEUS_CLIENT_SECRET=...
AMADEUS_BASE_URL=https://test.api.amadeus.com

# Search APIs (optional, for web search)
SERPER_API_KEY=...
SERPAPI_API_KEY=...

# Deployment URLs
API_URL=http://your-api-alb.amazonaws.com

# Vercel (for UI deployment)
VERCEL_TOKEN=...

# AWS (for ECS deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=...
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...

# Optional: AWS Profile (if using named profiles)
# AWS_PROFILE=your-profile-name

# MCP Server Configuration
MCP_SERVER_PORT=8765

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Demo Mode (uses mock data when APIs unavailable)
DEMO_MODE=false